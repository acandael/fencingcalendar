<div id="tournaments">
<nav>
  <ul>
    <li><%= link_to "Tournaments", tournaments_path %></li>
  </ul>
</nav>
<article>
  <header>
    <h1><%= @tournament.title %></h1>
  </header>
  <section class="date">
    <p>Startdate: <%= @tournament.start_date.strftime("%d/%m/%Y") if @tournament.start_date %><br>
    Enddate: <%= @tournament.end_date.strftime("%d/%m/%Y") if @tournament.end_date %><br>
    Closingdate: <%= @tournament.end_date.strftime("%d/%m/%Y") if @tournament.closing_date %>
  </section>
  <section>
    <p>Country: <%= @tournament.country.name %><br>
    Location: <%= @tournament.location %></p>
    <p>Venue: <%= simple_format(@tournament.venue) %></p>
  </section>
  <p>
  Weapons:
  <% @tournament.weapons.each do |weapon| %>
    <%= weapon.name %>
  <% end %>
    <br>
    Category: <%= @tournament.category.name %>
  </p>
  <p>Organization: 
  <% if @tournament.organization.link %>
    <%= link_to @tournament.organization.name, @tournament.organization.link %>
  <% else %>
    <%= @tournament.organization.name %>
  <% end %>
  </p>
  <% if @tournament.link %>
    <p>
    Link: <%= link_to @tournament.link, @tournament.link %>
    </p>
  <% end %>
  
</article>
</div>
